<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:theme="@style/Theme.Special"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <PreferenceCategory
        android:title="@string/camera_settings_section_title">

        <SeekBarPreference
            android:key="@string/motion_parallax_strength_key"
            android:title="@string/motion_parallax_strength_setting_title"
            android:max="6"
            android:defaultValue="3"/>

        <SwitchPreference
            android:key="@string/touch_offset_setting_key"
            android:title="@string/touch_offset_setting_title"
            android:defaultValue="@string/touch_offset_setting_default"/>

        <SwitchPreference
            android:key="@string/setting_zoom_camera_key"
            android:title="@string/zoom_camera_title"
            android:defaultValue="@string/default_true" />

        <SeekBarPreference
            android:key="@string/blur_amount_key"
            android:title="@string/blur_amount_title"
            android:max="@string/blur_amount_max"
            android:defaultValue="@string/blur_amount_default"
            android:min="0"
            />

        <SwitchPreference
            android:key="@string/rack_focus_enabled_key"
            android:title="@string/rack_focus_enabled_title"
            android:defaultValue="@string/default_true" />

        <CheckBoxPreference
            android:key="@string/invert_motion_parallax_key"
            android:title="@string/invert_motion_parallax_setting_title"
            android:defaultValue="@string/invert_motion_parallax_default"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/weather_location_settings">

        <ListPreference
            android:entries="@array/setTimePrefTitles"
            android:entryValues="@array/setTimePrefValues"
            android:key="@string/time_phase_key"
            android:title="@string/set_time_title"
            android:summary="%s"
            android:defaultValue="0"/>

        <SwitchPreference
            android:key="@string/location_setting_key"
            android:title="@string/location_setting_title"
            android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/weather_location_settings">


</PreferenceCategory>

